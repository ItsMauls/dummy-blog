<%- include('./includes/header')%>

<h1><%= pageTitle %></h1>
<p><%= content %></p>

<h1><%= secondTitle %></h1>
<p><%= secondDescription %></p>
<% for(let article of articles) { %>
  
    <h1>
        <a href="/posts/<%=article.id%>" style="color: black; text-decoration: none;" >
        <%= article.title %>
        </a>
    </h1>

    <p id="longText" >
        <%= article.description.slice(0,50) %>
      
        <span>
           
            <span id="moreText" style="display: none;">
                <%= article.description.slice(51,500) %>
              </span>
              
              <a style="cursor: pointer;" onclick="toggleText(this)">Preview...
            </a>
        </span>
     
    </p>
    
<% } %>


<%- include('./includes/footer')%>
<script>
    function toggleText(link) {
      const moreText = link.parentElement.querySelector("#moreText");
      
      
      if (moreText.style.display === "none") {
        moreText.style.display = "inline";
        link.textContent = "see less...";
      } else {
        moreText.style.display = "none";
        link.textContent = "Preview...";
      }
    }
  </script>

